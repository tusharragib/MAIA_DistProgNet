<!-- Pre-loader end -->
<section class="login p-fixed d-flex text-center">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <div class="signup-card card-block auth-body mr-auto ml-auto">
                    {{#each errors}}
                        <div class="alert alert-danger">{{text}}</div>
                    {{/each}}
                    <form class="md-float-material" method="post" action="registration">
                        <div class="text-center">
                            <img src="img/logo.png" alt="logo.png">
                        </div>
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary">Sign up. It is fast and easy.</h3>
                                </div>
                            </div>
                            <hr/>
                            <div class="input-group">
                                <input type="text" name="emailAddress" value="{{user.emailAddress}}"
                                       class="form-control" placeholder="Your Email Address">
                                <span class="md-line"></span>
                            </div>
                            <div class="input-group" style="width:32%">
                                <select name="role" class="form-control">
                                    <option value="doctor" {{#ifEquals user.role "doctor"}} selected {{/ifEquals}}>
                                        Doctor
                                    </option>
                                    <option value="patient" {{#ifEquals user.role "patient"}} selected {{/ifEquals}}>
                                        Patient
                                    </option>
                                </select>
                            </div>
                            <div class="input-group">
                                <input type="password" name="password" value="{{user.password}}"
                                       class="form-control" placeholder="Your Password">
                                <span class="md-line"></span>
                            </div>
                            <div class="input-group">
                                <input type="password" name="confirm_password" value="{{user.confirm_password}}"
                                       class="form-control" placeholder="Confirm Your Password">
                                <span class="md-line"></span>
                            </div>

                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Sign up now.</button>
                                </div>
                            </div>
                            <hr/>

                        </div>
                    </form>
                    <!-- end of form -->
                </div>
                <!-- Authentication card end -->
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>